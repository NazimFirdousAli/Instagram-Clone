datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  phonenumber String
  gender      String?
  avatar      String?
  dateofbirth String?
  posts       Post[]
  postLikesBy PostLikeBy[]
  Comment     Comment[]
}

model Post {
  id          Int          @id @default(autoincrement())
  content     String?
  user        User    
  createdAt   DateTime @default(now())
  Comment     Comment[]
  postLikesBy PostLikeBy[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String?
  post      Post      @relation(fields: [postId], references: [id])
  createdAt DateTime?
  postId    Int
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?
}

model PostLikeBy {
  id        Int       @id @default(autoincrement())
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime?
}
